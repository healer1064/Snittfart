{
  "name": "snittfart",
  "version": "1.1.2",
  "private": true,
  "dependencies": {
    "@devmoods/express-extras": "^0.7.2",
    "@devmoods/fetch": "^3.0.0",
    "@devmoods/ui": "^1.8.1",
    "@types/pg-format": "^1.0.2",
    "pg-format": "^1.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "scripts": {
    "clean": "rm -rf dist lib",
    "build:client": "tsc && vite build",
    "build:server": "yarn tsc --project tsconfig.server.json",
    "build": "yarn clean && yarn build:client && yarn build:server",
    "start": "vite",
    "start:api": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node --project tsconfig.server.json --files' src/server.ts",
    "test": "jest --maxWorkers=2",
    "prettier": "prettier --write '**/*.{js,css,md,ts,tsx}'",
    "import-sort": "import-sort --write '**/*.{js,jsx,ts,tsx}'",
    "format": "yarn import-sort && yarn prettier"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "import-sort-cli": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
